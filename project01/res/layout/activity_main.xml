<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_centerHorizontal="true"
                  android:background="@color/blue"
                  android:gravity="center"
                  android:text="Let's Care"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:textStyle="bold" />

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

              <Button
                  android:id="@+id/imageButton11"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:layout_marginBottom="2dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:onClick="generalCare"
                  android:text="General Care"
                  android:textColor="@color/white" />

              <Button
                  android:id="@+id/imageButton12"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp"
                  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:text="Eye Care"
                  android:textColor="@color/white" />

              <Button
                  android:id="@+id/imageButton13"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentRight="true"
        		  android:layout_alignParentTop="true"
        		  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp"
        		  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:text="Foot Care"
                  android:textColor="@color/white" />

          </RelativeLayout>
          
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="80px" >

              <TextView
                  android:id="@+id/textView2"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_centerHorizontal="true"
                  android:background="@color/blue"
                  android:gravity="center"
                  android:text="Charts &amp; Monitoring"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:textStyle="bold" />

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >
              
              <Button
                  android:id="@+id/imageButton21"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentLeft="true"
        		  android:layout_alignParentTop="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp"
        		  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:text="Blood Glucose"
                  android:textColor="@color/white" />

              <Button
                  android:id="@+id/imageButton21"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp"
        		  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:text="Blood Pressure"
                  android:textColor="@color/white" />

              <Button
                  android:id="@+id/imageButton21"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentRight="true"
        		  android:layout_alignParentTop="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp"
        		  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:text="HbA1c"
                  android:textColor="@color/white" />

          </RelativeLayout>
          
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="80px" >

              <TextView
                  android:id="@+id/textView3"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_centerHorizontal="true"
                  android:background="@color/blue"
                  android:gravity="center"
                  android:text="Your Plan"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:textStyle="bold" />

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

              <Button
                  android:id="@+id/imageButton31"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentLeft="true"
        		  android:layout_alignParentTop="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp"
        		  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:text="Make a plan"
                  android:textColor="@color/white" />

              <Button
                  android:id="@+id/imageButton31"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp"
        		  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:text="Stick to it"
                  android:textColor="@color/white" />

              <Button
                  android:id="@+id/imageButton31"
                  android:layout_width="100dp"
                  android:layout_height="60dp"
                  android:layout_alignParentRight="true"
        		  android:layout_alignParentTop="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp"
        		  android:background="@drawable/button"
                  android:drawablePadding="-40dp"
                  android:text="Get reward points"
                  android:textColor="@color/white" />

          </RelativeLayout>
          
</LinearLayout>
